<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseApp.Pages.HomePage"
             Title="الصفحة الرئيسية">
    <AbsoluteLayout>
        <Grid AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
              AbsoluteLayout.LayoutFlags="All"
              ColumnDefinitions="*,*" RowDefinitions="auto,auto,auto,*"
              Margin="10"
              FlowDirection="RightToLeft"
              ColumnSpacing="10"
              RowSpacing="10">
            <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                <Label Text="مرحبا"/>
                <Label Text="Smail" FontSize="Title"/>
                <Label Text="{Binding CurrentDate}" FontSize="Title" Padding="0,10"/>
                <Label Text="هيا, سجل مصروفاتك ولا تنس التسجيل اليومي!" FontSize="16"/>
            </VerticalStackLayout>
            <Border Grid.Column="0" Grid.Row="1" Padding="10" StrokeShape="RoundRectangle 10,10,10,10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="مصروفات اليوم" FontSize="Body" HorizontalOptions="Center"/>
                    <Label Text="0.00 دج" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
            <Border Grid.Column="1" Grid.Row="1" Padding="10" StrokeShape="RoundRectangle 10,10,10,10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="اجمالي المصروف" FontSize="Body" HorizontalOptions="Center"/>
                    <Label Text="0.00 دج" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
            <Label Grid.Column="0" Grid.Row="2" Text="المصروفات الأخيرة" 
                   VerticalTextAlignment="End" FontSize="Large"/>
            <CollectionView Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" EmptyView="لم تنفق أي مال اليوم ؟ لا تنس أن تسجل مصروفاتك">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*" Padding="10">

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- الزر يظهر أسفل الشبكة -->
        <!-- الزر يظهر في الزاوية السفلية بشكل دائري -->
        <Button AbsoluteLayout.LayoutBounds="0, 1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                x:Name="btnAddItem"
                Text="+"
                FontSize="40"
                Padding="0"
                BorderWidth="5"
                TextColor="Orange"
                BorderColor="Orange"
                BackgroundColor="Transparent"                
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="20"
                Margin="10"
                Clicked="btnAddItem_Clicked"/>
    </AbsoluteLayout>
</ContentPage>