<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseApp.ItemsView.ItemsPage"   
             FlowDirection="RightToLeft"
             Title="تعديل عناصر المصروفات">
    <AbsoluteLayout>
              <CollectionView AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                              AbsoluteLayout.LayoutFlags="All" x:Name="collectionItem" EmptyView="لا يوجد عناصر للمصروفات">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="40,*,40,40" Padding="10" ColumnSpacing="5">
                        <Label Grid.Column="0" Text="{Binding ID}"/>
                        <Label Grid.Column="1" Text="{Binding Title}"/>
                        <ImageButton Grid.Column="2" x:Name="btnEdit" Source="edit_icon.png" Clicked="btnEdit_Clicked" BackgroundColor="Transparent" MinimumHeightRequest="30" MinimumWidthRequest="30"/>
                        <ImageButton Grid.Column="3" x:Name="btnDelete" Source="delete_icon.jpg" Clicked="btnDelete_Clicked" BackgroundColor="Transparent" MinimumHeightRequest="30" MinimumWidthRequest="30"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button AbsoluteLayout.LayoutBounds="1, 1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                x:Name="btnAddItem"
                Clicked="btnAddItem_Clicked"
                Text="+"
                FontSize="Header"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                TextColor="White"
                Margin="10"/>
    </AbsoluteLayout>
</ContentPage>