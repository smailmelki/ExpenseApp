<?xml version="1.0" encoding="utf-8" ?>
<Toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"               
             x:Class="ExpenseApp.ItemsView.ReportPopupPage"
               Color="Transparent"
             Size="270,350">
    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
            Padding="10">
        
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20" />
        </Border.StrokeShape>
        
        <VerticalStackLayout FlowDirection="RightToLeft" Spacing="10">
            <Label Text="احصائيات المصروف الشهري" HorizontalOptions="Center" Padding="10" FontSize="22"/>
            <!-- إضافة خط أسفل العنوان -->
            <BoxView HeightRequest="2" BackgroundColor="Gray" HorizontalOptions="Fill" />

            <ScrollView>
                <VerticalStackLayout FlowDirection="RightToLeft" Spacing="5">
                    <Label Text="متوسط المصروف الشهري :"  HorizontalOptions="Center" FontSize="Body"/>
                    <Label x:Name="lblAverage" Text="0.00" HorizontalOptions="Center" FontSize="Title"/>
                    <Label Text="أكبر قيمة في المصروف :"  HorizontalOptions="Center" FontSize="Body"/>
                    <Label x:Name="lblMax" Text="0.00" HorizontalOptions="Center" FontSize="Title"/>
                    <Label Text="أقل قيمة في المصروف :"  HorizontalOptions="Center" FontSize="Body"/>
                    <Label x:Name="lblMin" Text="0.00"  HorizontalOptions="Center" FontSize="Title"/>
                </VerticalStackLayout>
            </ScrollView>           
        </VerticalStackLayout>
    </Border>
</Toolkit:Popup>