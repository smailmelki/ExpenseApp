<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseApp"    
    FlowDirection="LeftToRight"
    Shell.FlyoutBehavior="Disabled"
    Title="ExpenseApp">

    <TabBar>
        
        <Tab Title="Setting Page"  Icon="edit_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingPage}"/>
        </Tab>
        <Tab Title="Home Page"  Icon="add_icon.png" x:Name="HomeTab">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="State Page" Icon="delete_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:StatePage}"/>
        </Tab>

    </TabBar>   

</Shell>
